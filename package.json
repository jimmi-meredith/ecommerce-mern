    "url": "https://github.com/jimmi-meredith/ecommerce-mern/issues"
  },
  "homepage": "https://github.com/jimmi-meredith/ecommerce-mern#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.11"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
